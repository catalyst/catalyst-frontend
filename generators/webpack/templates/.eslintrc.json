{
  "env": {
    "browser": true,
    "es6": true<% if (options.jest) { %>,
    "jest": true<% } %>
  }<% if (options.react) { %>,
  "plugins": [
    "react"
  ]<% } %>,
  "extends": [
    "eslint:recommended"<% if (options.react) { %>,
    "plugin:react/recommended"<% } %>
  ],
  "parserOptions": {
    "ecmaVersion": 2018,<% if (options.react) { %>"ecmaFeatures": {
      "jsx": true
    },<% } %>
    "sourceType": "module"
  },
  "globals": {
    "fetch": true,
    "module": true
  },
  "rules": {
    "indent": [
      "warn",
      2
    ],
    "linebreak-style": [
      "warn",
      "unix"
    ],
    "quotes": [
      "warn",
      "single",
      { "allowTemplateLiterals": true }
    ],
    "semi": [
      "warn",
      "never"
    ],
    "no-console": ["warn"],
    "no-unused-vars": ["warn"],
    "max-len": ["warn", { "code": 120 , "ignoreComments": true }]
  }
}
